{
    "compilerOptions": {
        "target": "es2016",
        "module": "ESNext",
        "rootDir": "./src",
        "outDir": "./dist",
        "esModuleInterop": true,
        "forceConsistentCasingInFileNames": true,
        "strict": true,
        "skipLibCheck": true,
        "isolatedModules": true
    },
    "include": ["src/**/*.ts", ".vitest.config.ts"],
    "exclude": ["node_modules"]
}
